{% import "./macros.njk" as macros %}


{% set bodyClass = "page-template page-template-page_community page-template-page_community-php page page-id-213 community page-community" %}
{% set activeMenu = "menu-item-community" %}


{% block master__content %}
	{% set community__pageHeader_characters = [
		"https://webcdn.triongames.com/landingpages/heroesoftwilight/assets/img/headers/charac_community.png"
	] %}

	{{ macros.outputPageHeader(community__pageHeader_title, community__pageHeader_html, community__pageHeader_characters, langContent) }}

	<div id="content">
		<section id="community-posts">
			<div class="page-width">
				<h2>#llotgame</h2>

				<div class="masonry-grid" data-masonry-ajax-method="loadMoreCommunityPosts" data-masonry-items-to-output="6">
					<ul id="grid" class="wrapper-posts">
						{% for post in community__posts %}
							<li
								class="{{post.type}} masonry-grid-item post"
							>
								<a
									href="{{ post.url }}"
									onclick="ark.track('community','click','{{ post.post }}-');" target="_blank">
									<span class="channel"></span>
									<div class="text">
										<p class="date">
											{{ post.date }}
										</p>
										<p class="post">
											{{ post.post }}
										</p>
										<div class="author">
											<div
												class="avatar"
												style="background-image: url({{ post.avatar }});"
											></div>
											<div class="info">
												<p class="by">
													{{ language.authorBy }}
													{{ post.author }}
												</p>
												{% if post.username %}
													<p class="username">
														{{ post.username }}
													</p>
												{% endif %}
											</div>
										</div>
									</div>
								</a>
							</li>
						{% endfor %}
						{{ macros.outputPromoCard("li", "masonry-grid-item", langContent) }}
					</ul>
				</div>
			</div>
		</section>


		<section id="socials">
			<h2 class="follow">{{ community__follow }}</h2>
			<ul class="ico-socials">
				<li class="social-facebook"><a href="https://www.facebook.com/LittleLordsofTwilight/" onclick="ark.track('community','follow','facebook-');" target="_blank">Facebook</a></li>
				<li class="social-twitter"><a href="https://twitter.com/LLoTGame" onclick="ark.track('community','follow','twitter-');" target="_blank">Twitter</a></li>
				<li class="social-youtube"><a href="https://www.youtube.com/c/LittleLordsofTwilight" onclick="ark.track('community','follow','youtube-');" target="_blank">Youtube</a></li>
				<li class="social-twitch"><a href="https://www.twitch.tv/littlelordsoftwilight" onclick="ark.track('community','follow','twitch-');" target="_blank">Twitch</a></li>
			</ul>
			
			{#
			<h3>{{ community__signup }}</h3>
			<!-- Begin MailChimp Signup Form -->
			<div class="wrap-newsletter">
				<div id="mc_embed_signup">
					<form action="//bkom.us12.list-manage.com/subscribe/post?u=8dc466a799e7c722198db7791&amp;id=e22bf3e4dd" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
						<div id="mc_embed_signup_scroll">
							<div class="mc-field-group">
								<input type="email" value="" placeholder="{{ community__emailPlacehoder }}" name="EMAIL" class="required email" id="mce-EMAIL">
							</div>
							<input type="submit" value="{{ community__register }}" onclick="ark.track('community','subscribed','newsletter-');" name="Register now" id="mc-embedded-subscribe" class="button">
							<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_8dc466a799e7c722198db7791_e22bf3e4dd" tabindex="-1" value=""></div>
							<div id="mce-responses" class="clear">
								<div class="response" id="mce-error-response" style="display:none"></div>
								<div class="response" id="mce-success-response" style="display:none"></div>
							</div>
						</div>
					</form>
				</div>
			</div>
			<script src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
			<script>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
			{{ community__formExtras }}
			<!--End mc_embed_signup-->
			#}
		</section>
	</div>
{% endblock %}

{% extends "./master.njk" %}