						onclick="ark.track('media','download','media-kit-');">
							{{ media__download }}
						</a>
				</p>

				<h2>
					{{ media__features_title }}
				</h2>
				<img src="{{ gamigo_cdn }}/assets/img/media/pestipew_lady-frost.png" alt="" />
				<ul class="key-features">
					{{ media__features_text }}
				</ul>
			</div>
			<div class="factsheet">
				<div class="page-width">
					<h3>&#8211; {{ media__factsheet_title }} &#8211;</h3>
					<ul>
						{{ media__factsheet_text }}
					</ul>
				</div>
			</div>
		</section>

		<section id="story">
			<div class="page-width">
				<h2>
					{{ media__story_title }}
				</h2>
				{{ media__story_text }}
			</div>
		</section>

		<section id="origins">
