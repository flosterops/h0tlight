						{{ media__origins_text }}
					</div>
					<div class="wrapper-video">
						<span class="video">
							<img src="{{ gamigo_cdn }}/assets/img/media/FredM-et-Rosalie.jpg" alt="" />
						</span>
					</div>
				</div>
			</div>
		</section>

		<section id="videos">
			<h2>
				{{ media__videos_title }}
			</h2>
			<div class="page-width">
				<div class="wrapper-video">
					{%
						set media__videos_data = [
							{
								"image" : "{{ gamigo_cdn }}/assets/img/content/bg_video_cinema-trailer.jpg"
							},
							{
								"image" : "{{ gamigo_cdn }}/assets/img/content/bg_video_gameplay-trailer.jpg"
							}
						]
					%}
					{% for video in media__videos_data %}
					<div class="video">
						<a
							href="#"
							data-prevent-smooth-scroll="true"
							class="play-btn"
							onclick="ark.track('media','play','{{ media__videos_videos[loop.index0].title }}-');"
							data-videoid="{{ media__videos_videos[loop.index0].id }}"
						>
							<span class="play"></span>
							<img src="{{ video.image }}" alt="" />
						</a>
						<p>
							{{ media__videos_videos[loop.index0].title }}
						</p>
					</div>
					{% endfor %}
				</div>
			</div>
		</section>

